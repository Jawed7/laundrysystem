@using Microsoft.AspNetCore.Identity
@using laundry.Areas.Identity.Data

@inject SignInManager<laundryUser> SignInManager
@inject UserManager<laundryUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
                <button id="logout" type="submit" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-default btn-blue">Logout</button>
        </li>
    }
</ul>
